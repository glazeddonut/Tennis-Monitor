# Booking System Configuration (Halbooking or similar)
BOOKING_SYSTEM_URL=https://your-halbooking-instance.com

# User Credentials
BOOKING_USERNAME=your_username
BOOKING_PASSWORD=your_password

# Court Preferences
PREFERRED_COURTS=Court1,Court2,Court3
PREFERRED_TIME_SLOTS=10:00,14:00,18:00

# Notification Settings
ENABLE_EMAIL_ALERTS=false
EMAIL_RECIPIENT=your_email@example.com
ENABLE_PUSH_NOTIFICATIONS=true

# Push Notification Service (Options: "ntfy" or "pushbullet")
PUSH_SERVICE=ntfy

# ntfy.sh Configuration (free push notifications)
# How to use:
# 1. Choose a unique topic name (e.g., "mytennismonitor42")
# 2. Install the ntfy app on iPhone: https://apps.apple.com/us/app/ntfy/id1665873820
# 3. Open the app and subscribe to your chosen topic
# 4. Set NTFY_TOPIC below (anyone knowing the topic name can send to it)
NTFY_TOPIC=

# Pushbullet Configuration (alternative, requires signup)
# 1. Sign up at https://www.pushbullet.com
# 2. Get your API key from https://www.pushbullet.com/account/settings
# 3. Set PUSHBULLET_API_KEY below
# PUSHBULLET_API_KEY=

# Monitoring Settings
CHECK_INTERVAL_SECONDS=300
AUTO_BOOK_ENABLED=false

# Playwright Scraper Configuration (for Halbooking systems)
# Halbooking uses Bootstrap modals for login. The scraper automatically clicks
# the login link (data-toggle="modal") and fills the modal form.

# CSS selectors for login form elements (inside the #loginModal)
PW_SELECTOR_LOGIN_USERNAME=input#loginname
PW_SELECTOR_LOGIN_PASSWORD=input#password
PW_SELECTOR_LOGIN_SUBMIT=span#sub

# Halbooking-specific: Click the "Book baner" button to show availability
# NOTE: Exact match is critical — "Book baner" is different from "Book hold", "Book sæsonhold", "Book fast bane"
# Use the exact title attribute value. If the title is different, update the selector.
PW_SELECTOR_BOOK_BANER=div[title='Book baner']

# The URL that loads when you click "Book baner" (e.g., proc_baner.asp on Halbooking)
# If the scraper can't click the button, it will navigate directly to this URL instead.
PW_BANER_URL=https://example-tennis-club.dk/newlook/proc_baner.asp

# Halbooking-specific: Available court slots have class banefelt.btn_ledig
# and an onclick="mdsende(...)" payload that the scraper parses
PW_SELECTOR_AVAILABLE_SLOT=span.banefelt.btn_ledig

# IMPORTANT: Court number to human-readable name mapping
# If the booking system has new/unknown courts (court IDs not in this map),
# the monitor will stop and send an alert. Update this mapping to add new courts.
# Example: PW_COURT_MAP=9:Court11,10:Court12,14:Court4,20:Court5
PW_COURT_MAP=9:Court11,10:Court12,14:Court4,20:Court5

# Availability page and court listing selectors (fallback for generic systems)
PW_SELECTOR_AVAILABILITY_PAGE=https://example-tennis-club.dk/availability
PW_AVAILABILITY_URL_TEMPLATE=https://example-tennis-club.dk/availability?date={date}
PW_SELECTOR_COURT_ROWS=.court-row
PW_SELECTOR_COURT_NAME=.court-name
PW_SELECTOR_TIME_SLOT=.time-slot
PW_SELECTOR_BOOK_BUTTON=.book-button

# Optional: Direct booking URL template (if site supports it)
# PW_BOOK_URL_TEMPLATE=https://example-tennis-club.dk/book?court_id={court_id}&time={time_slot}

# Optional: Set to true to run Playwright in headful mode (shows browser window during scraping)
# BOOKING_HEADLESS=false

# Debugging
# Set to DEBUG for verbose logging, INFO for normal, WARNING for minimal
LOG_LEVEL=INFO
